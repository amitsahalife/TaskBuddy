<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.amitsahalife.todolist.Ui.splash"
        android:label="fragment_splash"

        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_homeFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/splash"

            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_splash_to_screenOneFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/splash"
            app:destination="@id/screenOneFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUp"
        android:name="com.amitsahalife.todolist.Ui.signUp"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUp_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/signIn"
        android:name="com.amitsahalife.todolist.Ui.signIn"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signIn_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_signIn_to_signUp"
            app:destination="@id/signUp" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.amitsahalife.todolist.Ui.homeFragment"
        android:label="fragment_home"

        app:popUpToInclusive="true"
        app:popUpTo="@id/homeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            app:popUpToInclusive="true"
            app:popUpTo="@id/homeFragment"
            android:id="@+id/action_homeFragment_to_screenTwoFragment"
            app:destination="@id/screenTwoFragment" />
    </fragment>
    <fragment
        android:id="@+id/screenOneFragment"
        android:name="com.amitsahalife.todolist.Ui.screenOneFragment"
        android:label="fragment_screen_one"
        tools:layout="@layout/fragment_screen_one" >
        <action
            android:id="@+id/action_screenOneFragment_to_screenTwoFragment"
            app:destination="@id/screenTwoFragment" />
    </fragment>
    <fragment
        android:id="@+id/screenTwoFragment"
        android:name="com.amitsahalife.todolist.Ui.screenTwoFragment"
        android:label="fragment_screen_two2"
        tools:layout="@layout/fragment_screen_two2" >
        <action
            android:id="@+id/action_screenTwoFragment_to_signUp2"
            app:destination="@id/signUp" />
        <action
            android:id="@+id/action_screenTwoFragment_to_signIn2"
            app:destination="@id/signIn" />
    </fragment>
</navigation>